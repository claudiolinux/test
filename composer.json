{
    "name": "claudiolinux/slenix",
    "description": "Slenix é um micro framework flexível para construir APIs REST e aplicações web (versão de teste)",
    "keywords": ["slenix", "microframework", "test"],
    "homepage": "https://github.com/claudiolinux/test",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Cláudio Victor",
            "email": "claudiodev147@gmail.com",
            "role": "Developer",
            "homepage": "https://github.com/claudiolinux"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Slenix\\": "src/"
        },
        "files": [
            "src/Helpers/Helpers.php"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": false,
    "scripts": {
        "post-create-project-cmd": [
            "php celestial make:scaffold",
            "@php -r \"echo 'Slenix instalado com sucesso!\\n';\""
        ],
        "serve": "php celestial serve"
    },
    "config": {
        "sort-packages": true
    },
    "support": {
        "email": "claudiodev147@gmail.com",
        "issues": "https://github.com/claudiolinux/test/issues",
        "source": "https://github.com/claudiolinux/test"
    }
}